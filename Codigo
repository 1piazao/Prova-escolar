pergunta_1 = input("Defina sua primeira pergunta: ")
resposta_1 = input("Defina a resposta dessa pergunta: ")

pergunta_2 = input("Defina a segunda pergunta: ")
resposta_2 = input("Defina a resposta dessa pergunta: ")

pergunta_3 = input("Defina a terceira pergunta: ")
resposta_3 = input("Defina a resposta dessa pergunta: ")

notaAluno = 0

print ("primeira pergunta: " + pergunta_1)
respostaAluno_1 = input("Qual a resposta correta?") 

if resposta_1 == respostaAluno_1:
  print ("Muito bem! resposta correta!")
  notaAluno = (notaAluno + 1)
else:
  print ("Continue estudando.")

print ("segunda pergunta: " + pergunta_2)
respostaAluno_2 = input("Qual a resposta correta?")

if resposta_2 == respostaAluno_2:
  print ("Muito bem! resposta correta!")
  notaAluno = (notaAluno + 1)
else:
  print ("Continue estudando.")

print ("terceira pergunta: " + pergunta_3)
respostaAluno_3 = input("Qual a resposta correta?")

if resposta_3 == respostaAluno_3:
  print ("Muito bem! resposta correta!")
  notaAluno = (notaAluno + 1)
else:
  print ("Continue estudando.")

if notaAluno >= 2:
    print ("Voce passou!")
else:
   print ("REPROVOU BURRO!")
